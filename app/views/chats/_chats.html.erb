<ul class="list-unstyled">
  <% chats.each do |chat| %>
    <li class="media mb-3">
      <div class = 'col-1'>
        <% if chat.user.image? %>
          <div class="thumbnail">
            <%= image_tag chat.user.image.url,class: "img-fluid" %>
          </div>
        <% else %>
          <div class="thumbnail">
            <%= image_tag 'user.jpg',class: "img-fluid" %>
          </div>
        <% end %>
      </div>
      <div class="media-body"> 
        <div>
          <%= link_to chat.user.name, user_path(chat.user) %> <span class="text-muted"><%= chat.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M")  %></span>
        </div>
        <div>
          <p><%= chat.content %></p>
        </div>
        <div>
          <% if current_user == chat.user %>
            <%= link_to "Delete", chat, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate chats %>
</ul>
