<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div class = "col-1">
          <% if user.image? %>
            <div class="thumbnail">
              <%= image_tag user.image.url,class: "img-fluid" %>
            </div>
          <% else %>
            <div class="thumbnail">
              <%= image_tag 'user.jpg',class: "img-fluid"%>
            </div>
          <% end %>
        </div>
        <div class = "col-11">
          <div class="media-body">
            <div>
              <%= user.name %>
            </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%#= paginate users %>
<% end %>